// Funktion potenz implementieren
// positive ganzzahlige Potenz
int potenz(int zahl, int pot) {
    int result = zahl;
    int counter = 1;
    while(counter < pot) {
        result = result * zahl;
        printf("xyz: %d\n", result);
        counter++;
    }

    return result;
}

int main() {
    int zahla = 10;
    int zahlb = 5;
    int resultat; 

    resultat = add(zahla, zahlb);
    printf("Addition: %d\n", resultat);
    //resultat = sub(zahla, zahlb);
    //printf("Subtraktion: %d\n", resultat);
    resultat = potenz(zahla, zahlb);
    printf("Potenz: %d\n", resultat);
    return 0;
}
